<Window x:Class="DocumentManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="지출결의서 관리 시스템" Height="750" Width="850">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="12" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="지출결의서"
                           Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3"
                           FontSize="24" FontWeight="Bold" Margin="10" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <Border Grid.Row="0" Grid.Column="5" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1,0,1,0">
                    <TextBlock Text="기 안" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="1" BorderBrush="Black" BorderThickness="0,0,1,1">
                    <TextBlock Text="기안자" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="6" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontWeight="Bold"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="7" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="결 재" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                            <TextBlock Text="검토" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                            <TextBlock Text="확인" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Border Grid.Column="2" Grid.ColumnSpan="2">
                            <TextBlock Text="승인" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                <Border Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                <Border Grid.Row="1" Grid.Column="9" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,0,0,0"/>
                <Border Grid.Row="1" Grid.Column="10" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,0,0,0"/>

            </Grid>
        </Border>

        <TextBlock Text="{Binding ElementName=TotalAmountTextBlock, Path=Text}"
                   Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="7" 
                   VerticalAlignment="Center" HorizontalAlignment="Right"
                   Margin="0, 5, 10, 5" FontWeight="Bold"
                   Background="LightYellow"
                   x:Name="TotalAmountTextBlock"/>

        <TextBlock x:Name="TotalAmountValueTextBlockHeader" 
    Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="5" 
    Text="₩ 0 원" 
    VerticalAlignment="Center" HorizontalAlignment="Right"
    Margin="0, 5, 10, 5" FontWeight="Bold"
    Background="LightYellow"/>


        <Border Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,0,1">
            <TextBlock Text="구 분" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1,1,0,1">
            <ComboBox x:Name="DivisionComboBox"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              BorderThickness="0"
              FontSize="12" SelectedIndex="0">
                <ComboBoxItem Content="일반"/>
                <ComboBoxItem Content="국책"/>

            </ComboBox>
        </Border>
        <Border Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,1,0,1">
            <TextBlock Text="문서번호" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,1,0,1">
            <TextBlock x:Name="DocumentNumberTextBlock" 
               Text="[문서번호 발급]" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Cursor="Hand"
               MouseLeftButtonDown="DocumentNumberTextBlock_MouseLeftButtonDown"/> 
        </Border>
        <Border Grid.Row="4" Grid.Column="9" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1,1,0,1">
            <TextBlock Text="품의부서코드" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="4" Grid.Column="11" BorderBrush="Black" BorderThickness="1,1,1,1">
            <TextBox x:Name="DepartmentCodeTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <Border Grid.Row="5" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="품 의" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBox x:Name="SubmissionTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
             InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>
        <Border Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="품의인" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="5" Grid.Column="6" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBox x:Name="SubmissionNameTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
                     InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>
        <Border Grid.Row="5" Grid.Column="9" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="처리" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="5" Grid.Column="10" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1,0,1,1">
            <TextBox x:Name="IscompleteTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
                     InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>

        <Border Grid.Row="6" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="결 재" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBox x:Name="ApprovalTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
                     InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>
        <Border Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="결의인" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="6" Grid.Column="6" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBox x:Name="ApprovalNameTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
                     InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>
        <Border Grid.Row="6" Grid.Column="9" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,1,1">
            <TextBlock Text="계 정 과 목" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>

        <Border Grid.Row="7" Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="지 출" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBox x:Name="ExpenditureTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
             InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>
        <Border Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock Text="지출인" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="7" Grid.Column="6" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBox x:Name="ExpenditureNameTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
                     InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>
        <Border Grid.Row="7" Grid.Column="9" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,1,1">
            <TextBox x:Name="AccountSubjectTextBox" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0"
                     InputMethod.IsInputMethodEnabled="True" InputMethod.PreferredImeState="On" />
        </Border>

        <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="12" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="지 출 내 역"
               HorizontalAlignment="Stretch"  VerticalAlignment="Center"
               FontWeight="Bold" 
               Background="LightGray" 
               Padding="5" 
               TextAlignment="Center"/>
        </Border>

        <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1" Background="LightGray">
            <TextBlock Text="항 목" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1,0,0,1" Background="LightGray">
            <TextBlock Text="금 액" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Row="9" Grid.Column="7" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="1,0,1,1" Background="LightGray">
            <TextBlock Text="비 고" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="12" >
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ExpenseItemsStackPanel">
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1,0,0,1" Background="LightGray">
            <TextBlock Text="합계" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1,0,0,1">
            <TextBlock x:Name="TotalAmountValueTextBlockFooter" 
        Text="0"
        HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Border Grid.Row="11" Grid.Column="7" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="1,0,1,1" Background="LightGray"/>
        <Grid Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddRowButton"
            Content="줄 추가하기" 
            Grid.Column="0"
            Margin="10" 
            Click="AddRowButton_Click"/>

            <Button x:Name="ExportToExcelButton"
            Content="엑셀 저장" 
            Grid.Column="1"
            Margin="10" 
            Click="ExportToExcel_Click" HorizontalAlignment="Right"/>
            
        </Grid>

    </Grid>
</Window>